<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
    android:id="@+id/rootRL"
    android:orientation="vertical" 
	android:padding="10dp" >

	<ScrollView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
	>
	<LinearLayout
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="vertical" >
	
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nama Makanan :"
        android:textSize="16sp" >

	</TextView>
	<EditText android:text=""
	    android:layout_height="wrap_content"
	    android:id="@+id/edit_nama_makanan"
        android:textSize="16sp"
		android:layout_width="fill_parent" >
	</EditText>

	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Banyak Pesan"
	    android:textAppearance="?android:attr/textAppearanceSmall" />

	<EditText
	    android:id="@+id/edit_jml_pesanan"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:ems="10" />
	
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pemesan :"
        android:textSize="16sp" >

	</TextView>
	<EditText android:text=""
	    android:layout_height="wrap_content"
	    android:id="@+id/edit_nama_pemesan"
        android:textSize="16sp"
		android:layout_width="fill_parent" >
	</EditText>

	<TextView
	    android:id="@+id/alamat"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Alamat"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<EditText
	    android:id="@+id/edit_alamat"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:ems="10"
	    android:inputType="textPersonName" >

	    <requestFocus />
	</EditText>

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="No HP"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<EditText
	    android:id="@+id/edit_no_hp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:ems="10" />
	
    <TextView android:text="Pilih Gambar :"
	    android:layout_height="wrap_content"
        android:textSize="16sp"
		android:layout_width="fill_parent" >
	</TextView>
	<Button 
		android:id="@+id/btn_choose"
		android:text="Pilih Gambar" 		 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"/>
		
	<ImageView 
		android:id="@+id/iv_pic"
		android:layout_width="wrap_content"
		android:layout_height="200dp"		
		android:layout_marginTop="10dp"/>
		
	<EditText android:text=""
	    android:layout_height="wrap_content"
	    android:id="@+id/edit_gambar"
        android:textSize="12sp"
		android:layout_width="fill_parent" >
	</EditText>
	
    <TextView android:text="Keterangan :"
	    android:layout_height="wrap_content"
        android:textSize="16sp"
		android:layout_width="fill_parent" >
	</TextView>
	<EditText android:text=""
    	android:layout_width="fill_parent"
    	android:layout_height="300px"
    	android:gravity="top"
        android:textSize="16sp"
	    android:id="@+id/edit_keterangan" >
	</EditText>
	
	<Spinner
        android:id="@+id/spinner_penemu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
    />
	
    <Button
        android:id="@+id/btn_simpan_penemu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Simpan Data" />

</LinearLayout>
</ScrollView>

</LinearLayout>